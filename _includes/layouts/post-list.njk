---
layout: page
---

<div class="home">
  <ol reversed class="postlist">
    {% for post in collections.posts | filterByTags([tag] if tag else []) | reverse %}
      <li class="postlist-item{% if post.data.draft %} postlist-item-draft{% endif %}">
        <a href="{{ post.url | url }}">
          <div class="postlist-item-thumbnail">
            {% postThumbnail post %}
          </div>
        </a>
        <div class="postlist-item-content">
          <a href="{{ post.url | url }}" class="postlist-title">{{ post.data.title }}</a>
          <time class="postlist-date" datetime="{{ post.date | isoDateTime }}">{{ post.date | date }}</time>
        </div>
      </li>
    {% endfor %}
  </ol>
</div>
