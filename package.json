{
  "name": "andreas-mausch-de",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "ELEVENTY_ENV=development eleventy --serve",
    "build": "ELEVENTY_ENV=production eleventy",
    "generate:font": "mkdirp ./_site/styles/icons/ && iconism --output ./_site/styles/icons/ --types ttf,woff2 --assets css --prefix icon --debug ./icon-font.json",
    "lint": "npm run lint:scripts && npm run lint:scss",
    "lint:scripts": "eslint .",
    "lint:scss": "stylelint ./styles/**/*.scss",
    "check:types": "tsc",
    "check:links": "linkinator --skip=linkedin.com,github.com --recurse --timeout 3000 --verbosity error ./_site/",
    "clean": "rimraf ./_site/",
    "postinstall": "download https://github.com/plantuml/plantuml/releases/download/v1.2025.2/plantuml-1.2025.2.jar --out . --filename plantuml.jar"
  },
  "license": "MIT",
  "dependencies": {
    "@fontsource/raleway": "5.2.5",
    "img-comparison-slider": "8.0.6",
    "katex": "0.16.21",
    "prism-themes": "1.9.0",
    "swiffy-slider": "1.6.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "3.0.0",
    "@11ty/eleventy-img": "6.0.1",
    "@11ty/eleventy-plugin-directory-output": "1.0.1",
    "@11ty/eleventy-plugin-rss": "2.0.3",
    "@fortawesome/fontawesome-free": "6.7.2",
    "@emotion/core": "10.3.1",
    "@emotion/styled": "10.3.0",
    "@eslint/compat": "1.2.7",
    "@types/toastify-js": "1.12.3",
    "@typescript-eslint/eslint-plugin": "8.27.0",
    "@typescript-eslint/parser": "8.27.0",
    "autoprefixer": "10.4.21",
    "download-cli": "1.1.1",
    "eleventy-plugin-emoji": "1.1.0",
    "eleventy-plugin-nesting-toc": "1.3.0",
    "eleventy-sass": "3.0.0-beta.0",
    "esbuild": "0.25.1",
    "eslint": "9.22.0",
    "get-contrast": "3.0.0",
    "glob": "11.0.1",
    "globals": "16.0.0",
    "iconism": "1.2.3",
    "jsdom": "26.0.0",
    "linkinator": "6.1.2",
    "markdown-it-anchor": "9.2.0",
    "markdown-it-attribution": "0.1.4",
    "markdown-it-attrs": "4.3.1",
    "markdown-it-external-links": "0.0.6",
    "markdown-it-footnote": "4.0.0",
    "markdown-it-plantuml-ex2": "1.0.1",
    "markdown-it-prism": "2.3.1",
    "markdown-it-task-checkbox": "1.0.6",
    "mkdirp": "3.0.1",
    "postcss": "8.5.3",
    "pre-commit": "1.2.2",
    "qrcode": "1.5.4",
    "rimraf": "6.0.1",
    "stylelint": "16.16.0",
    "stylelint-config-sass-guidelines": "12.1.0",
    "svg-term": "2.0.3",
    "svgo": "3.3.2",
    "typescript": "5.8.2"
  },
  "pre-commit": [
    "lint",
    "check:types"
  ]
}
